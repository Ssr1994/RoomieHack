<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff5CBADF" />
            <stroke
                android:width="1dp"
                android:color="#ff4c627c" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff4c89a8"
                android:endColor="#ff4c89a8"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff4c627c" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="2dp"
                android:right="10dp"
                android:bottom="2dp" />
        </shape>
    </item>
</selector>